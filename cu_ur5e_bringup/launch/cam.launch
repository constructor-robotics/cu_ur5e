<?xml version="1.0"?>
<!-- main launch file for the physical system -->
<launch>
    <node name="cam" pkg="usb_cam" type="usb_cam_node">
        <!--
        the camera supports 1920x1080 at 30fps, but yields many partial frames
        in that configuration. Use reduced resolution
        -->
        <param name="image_width" value="1280"/>
        <param name="image_height" value="720"/>
        <param name="framerate" value="15"/>

        <param name="pixel_format" value="mjpeg"/>
        <param name="color_format" value="yuv420p"/>
        <param name="camera_frame_id" value="cam"/>
        <param name="camera_name" value="elp_usb_cam"/>
    </node>
</launch>
